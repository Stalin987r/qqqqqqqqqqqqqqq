# Abstracción: clase general
class Vehiculo:
    def __init__(self, marca, modelo):
        # Encapsulación: atributos privados
        self.__marca = marca
        self.__modelo = modelo

    def obtener_info(self):
        return f"{self.__marca} {self.__modelo}"

    # Método que será usado para polimorfismo
    def acelerar(self):
        pass


# Herencia: Auto hereda de Vehiculo
class Auto(Vehiculo):
    def acelerar(self):
        return "El auto acelera suavemente."


# Herencia: Moto hereda de Vehiculo
class Moto(Vehiculo):
    def acelerar(self):
        return "La moto acelera rápidamente con un sonido fuerte."


# Polimorfismo en acción
vehiculos = [
    Auto("Toyota", "Corolla"),
    Moto("Yamaha", "MT-07")
]

for v in vehiculos:
    print(v.obtener_info(), "-", v.acelerar())
